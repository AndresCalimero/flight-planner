<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dad.planeador.vuelos.views.GestionarTiposController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Buscar:" />
            <TextField fx:id="buscarTextField" />
            <Region HBox.Hgrow="always" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#onNuevoButtonActionPerformed" text="Nuevo" />
            <Button fx:id="editarButton" disable="true" mnemonicParsing="false" onAction="#onEditarButtonActionPerformed" text="Editar" />
            <Button fx:id="eliminarButton" disable="true" mnemonicParsing="false" onAction="#onEliminarButtonActionPerformed" text="Eliminar" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <ListView fx:id="tiposListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
